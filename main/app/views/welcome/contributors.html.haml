.container
  .row
    %h1
      = "Contributors repository: \"#{@permitted_params[:repo]}\""
    .col-md-4
      - if @errors.empty?
        %ul
          - @contributors.each do |contributor|
            %li
              %p
                = contributor["login"]
              %p
                = link_to "Show diploma", diplom_path(login: contributor["login"]), class: "diploma_link"

      - else
        %ul
          - @errors.each do |msg|
            %li
              = msg